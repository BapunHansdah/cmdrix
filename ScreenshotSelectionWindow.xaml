<Window x:Class="cmdrix.UI.ScreenshotSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screenshot Selection" 
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Black"
        KeyDown="Window_KeyDown">

    <Grid>
        <!-- Screenshot Image -->
        <Image x:Name="ScreenshotImage" 
               Stretch="Uniform"
               Opacity="0.9"/>

        <!-- Selection Canvas -->
        <Canvas x:Name="SelectionCanvas"
                Background="Transparent"
                MouseLeftButtonDown="SelectionCanvas_MouseLeftButtonDown"
                MouseMove="SelectionCanvas_MouseMove"
                MouseLeftButtonUp="SelectionCanvas_MouseLeftButtonUp">

            <!-- Dim Overlays (4 rectangles around selection) -->
            <Rectangle x:Name="DimOverlay1"
                       Fill="#80000000"
                       Visibility="Collapsed"/>

            <Rectangle x:Name="DimOverlay2"
                       Fill="#80000000"
                       Visibility="Collapsed"/>

            <Rectangle x:Name="DimOverlay3"
                       Fill="#80000000"
                       Visibility="Collapsed"/>

            <Rectangle x:Name="DimOverlay4"
                       Fill="#80000000"
                       Visibility="Collapsed"/>

            <!-- Selection Rectangle -->
            <Rectangle x:Name="SelectionRectangle"
                       Stroke="#2196F3"
                       StrokeThickness="3"
                       Fill="Transparent"
                       Visibility="Collapsed"/>
        </Canvas>

        <!-- Button Panel -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,40">

            <Button x:Name="ConfirmButton"
                    Content="✅ Confirm"
                    FontSize="12"
                    Padding="12,6"
                    Margin="0,0,8,0"
                    IsEnabled="False"
                    Click="ConfirmButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="0"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="CancelButton"
                    Content="❌ Cancel"
                    FontSize="12"
                    Padding="12,6"
                    Click="CancelButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#F44336"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="0"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Instructions -->
        <TextBlock Text="Click and drag to select an area • ESC to cancel • ENTER to confirm"
                   Foreground="White"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"
                   Padding="12,8"
                   Background="#80000000"/>
    </Grid>
</Window>